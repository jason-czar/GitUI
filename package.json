{
    "name": "@gitui/repo",
    "version": "0.0.0",
    "description": "GitUI Monorepo",
    "homepage": "https://gitui.dev",
    "license": "Apache-2.0",
    "private": true,
    "author": {
        "name": "GitUI",
        "email": "contact@gitui.dev"
    },
    "workspaces": [
        "packages/*",
        "apps/*",
        "tooling/*",
        "apps/web/*",
        "docs"
    ],
    "scripts": {
        "build": "bun --filter @onlook/web build:client",
        "start": "bun --filter @onlook/web start:client",
        "dev": "bun --elide-lines=0 --filter @onlook/web dev",
        "test": "bun --elide-lines=0 --filter '*' test",
        "docs": "bun --filter @onlook/docs dev",
        "backend:start": "bun --filter @onlook/backend start",
        "db:gen": "bun --filter @onlook/db db:gen",
        "db:push": "cd packages/db && bun db:push",
        "db:seed": "cd packages/db && bun db:seed",
        "db:migrate": "cd packages/db && bun db:migrate",
        "db:reset": "cd apps/backend && bun run reset",
        "format": "bun --filter '*' format",
        "lint": "bun --filter @onlook/web-client lint",
        "typecheck": "cd apps/web/client && bun run typecheck",
        "prepare": "husky",
        "clean": "git clean -xdf node_modules",
        "clean:workspaces": "bun --filter '*' clean",
        "setup:env": "cd packages/scripts && bun run start",
        "docker:build": "docker compose build",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f",
        "docker:restart": "docker compose down && docker compose up -d --build",
        "deploy:staging": "vercel --prod",
        "deploy:preview": "vercel",
        "postdeploy": "bun scripts/postdeploy.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jason-czar/GitUI.git"
    },
    "bugs": {
        "url": "https://github.com/jason-czar/GitUI/issues"
    },
    "devDependencies": {
        "husky": "^9.1.6"
    },
    "packageManager": "bun@1.2.21"
}